# MANAGED BY PUPPET

<% case @operatingsystem
	when /(Ubuntu|Debian)/ %>
user www-data;
include /etc/nginx/modules-enabled/*.conf;
	<% when /(RedHat|CentOS|Fedora)/ %>
user nginx;
include /usr/share/nginx/modules/*.conf;
<% end %>
worker_processes <%= @worker_processes %>;
error_log <%= @error_log %>;
pid <%= @pid_file %>;

events {
    worker_connections <%= @worker_connections %>;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
		      '"$http_user_agent" "$http_x_forwarded_for" request_time=$request_time';

    access_log  <%= @access_log %>  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 2048;

    include             <%= @mime_include %>;
    default_type        application/octet-stream;

    include /etc/nginx/conf.d/*.conf;

    upstream first_backend_https {
        server <%= @first_backend_https %> ;
    }

    upstream second_backend_https {
        server <%= @second_backend_https %> ;
    }

    # FORWARD PROXY

    server {
        listen       <%= @port_http %>;
        server_name  <%= @fqdn %>;
        root         <%= @docroot %>;

	location / {
          proxy_pass http://$http_host$uri$is_args$args;
        }
    }

    # REVERSE PROXY

    server {
        listen       <%= @port_https %> ssl http2;
        server_name  <%= @server_name %>;
        root         <%= @docroot %>;

        ssl_certificate "<%= @ssl_certificate %>";
        ssl_certificate_key "<%= @ssl_certificate_key %>";
        ssl_session_cache <%= @ssl_session_cache %>;
        ssl_session_timeout  <%= @ssl_session_timeout %>;
        ssl_ciphers <%= @ssl_ciphers %>;
        ssl_prefer_server_ciphers <%= @ssl_prefer_server_ciphers %>;

	location = / {
	  proxy_pass https://first_backend_https;
	  proxy_set_header Host            $host;
          proxy_set_header X-Real-IP       $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

	location = /resoure2 {
          proxy_pass https://second_backend_https;
	  proxy_set_header Host            $host;
          proxy_set_header X-Real-IP       $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }
}
